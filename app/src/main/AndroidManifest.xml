<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.parkinsonassistant">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />







    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logopa"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logopa_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkinsonAssistant"
        tools:targetApi="31">

        <activity
            android:name=".OnBoardingActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".StartPageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ParkinsonAssistant" />

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ParkinsonAssistant" />

        <activity
            android:name=".NotesActivity"
            android:label="Notes Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ParkinsonAssistant" />

        <activity
            android:name=".ParkinsonInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ParkinsonAssistant" />

        <activity
            android:name=".Activity_Player"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Activity_Videos"
            android:screenOrientation="portrait"/>

        <activity android:name=".TimelineActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".CameraManager"
            android:screenOrientation="portrait"/>

        <activity android:name=".FaceDetection"
            android:screenOrientation="portrait"/>






    </application>

</manifest>
